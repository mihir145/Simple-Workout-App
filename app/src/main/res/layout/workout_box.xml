<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/workout_item"
    android:background="@drawable/workout_item_background"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/workout_item_imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/situps" />

    <TextView
        android:id="@+id/time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/workout_item_imageView"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/fredoka"
        android:text="1 minute"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/calorie_burned_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_textView"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/fredoka"
        android:text="Calorie Workout"
        android:textSize="13sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/workout_item_btn_background"
        android:text="Start"
        android:textSize="13sp"
        android:fontFamily="@font/zenkurenaido"
        android:textStyle="bold"
        android:textColor="@color/white" />

</RelativeLayout>